<div class="enter-container" class="bg-amber-300">
    <h1>
        <%= type_user %> Login
    </h1>

    <% if (error !="none" ) { %>
        <div class="error-message">
            <p>
                <%= error %>
            </p>
        </div>
        <% } %>

            <form action="/api/<%= type_user.toLowerCase() %>/login" method="POST">
                <table class="form-group">
                    <tr>
                        <th><label for="email">Email</label></th>
                        <td><input type="email" id="email" name="email" required></td>
                    </tr>

                    <tr>
                        <th><label for="password">Password</label></th>
                        <td><input type="password" id="password" name="password" required></td>
                    </tr>
                </table>

                <button type="submit" class="door-button">Login</button>
            </form>

            <p>Don't have an account? <a href="/<%= type_user.toLowerCase() %>/register">Register</a></p>
</div>