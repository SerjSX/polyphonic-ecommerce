<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Dashboard</title>
    <link href="/css/output.css" rel="stylesheet">
</head>

<body>
    <header>
        <h1>
            <%= store_name %>'s <%= category_name %> Category
        </h1>
        <h4>Which one would you like to purchase?</h4>

        <%- include('nav') %>

    </header>

    <main>
        <div class="itemContainer">
            <% if (products && products.length> 0) { %>
                <div id="productsList">
                    <% products.forEach(product=> { %>
                        <div class="no-js-item-card product-card">
                            <div class="item-card-part product-card-part">

                                <h3>
                                    <%= product.name %>
                                </h3>
                                <p class="price">$<%= Number.parseFloat(product.price).toFixed(2) %>
                                </p>

                                <% if (product.pay_by_installment) { %>
                                    <a class="info-button" title="Can be paid in installments"><svg
                                            xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                            stroke-width="1.5" stroke="currentColor" class="size-6">
                                            <path stroke-linecap="round" stroke-linejoin="round"
                                                d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                                        </svg></a>
                                    <% } else { %>
                                        <a class="info-button" title="Can not be paid in installments"><svg
                                                xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                                stroke-width="1.5" stroke="currentColor" class="size-6">
                                                <path stroke-linecap="round" stroke-linejoin="round"
                                                    d="m9.75 9.75 4.5 4.5m0-4.5-4.5 4.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                                            </svg></a>
                                        <% } %>
                            </div>

                            <div class="item-card-part product-card-part-last product-card-part">
                                <p class="description">
                                    <%= product.description %>
                                </p>
                            </div>

                            <form action="/api/user/add-to-cart/<%= product._id %>" method="POST" class="add-to-cart">
                                <button type="submit" class="add-to-cart-button" title="Add to Cart">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                        stroke-width="1.5" stroke="currentColor" class="size-6">
                                        <path stroke-linecap="round" stroke-linejoin="round"
                                            d="M12 9v6m3-3H9m12 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                                    </svg>
                                </button>
                            </form>
                        </div>
                        <% }); %>
                </div>
                <% } else { %>
                    <div id="emptyMessage">No products found.</div>
                    <% } %>
        </div>
    </main>

    <footer>
        <% const skip_val_back=Number(skip_val) - 2; 
        const skip_val_next=Number(skip_val) + 2;%>
            <a href="/api/category/get-products/<%= store_name %>-<%= store_id %>-<%= category_name %>-<%= category_id %>/<%= skip_val_back %>/" class="page-switch-buttons back-button">
                <% if (skip_val_back>= 0) {%>
                    <button type="submit" class="back-button">Previous Page</button>
                    <% } else { %>
                        <button type="submit" class="back-button" disabled>Previous Page</button>
                        <% } %>
            </a>
            <a href="/api/category/get-products/<%= store_name %>-<%= store_id %>-<%= category_name %>-<%= category_id %>/<%= skip_val_next %>/" class="page-switch-buttons next-button">
                <% if (products_left <= 0) {%>
                    <button type="submit" class="next-button" disabled>Next Page</button>
                    <% } else { %>
                        <button type="submit" class="next-button">Next Page</button>
                        <% } %>
            </a>
    </footer>
</body>

</html>