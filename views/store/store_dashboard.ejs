<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products List</title>
    <link href="/css/output.css" rel="stylesheet">
</head>

<body>
    <header>
        <h1>Your Store's Products</h1>
        <nav>
            <form action="/api/store/logout" method="post" class="logout-button">
                <button type="submit" class="door-button"
                    onclick="return confirm('Are you sure you want to logout?')">Logout</button>
            </form>

            <a href="/product/add"><button type="submit" id="add-product-button">Add New</button></a>
            <button>See Orders</button>
            <button>See Categories</button>
        </nav>
    </header>

    <main>
        <section class="overlay hidden"></section>
        <div id="productContainer">

            <% if (products && products.length> 0) { %>
                <div class="productsList">
                    <% products.forEach(product=> { %>
                        <div class="product-card store-product-card">
                            <div class="product-card-part">
                                <p class="category font-extralight">
                                    <%= product.category %>
                                </p>
                                <h3>
                                    <%= product.name %>
                                </h3>
                            </div>
                            <div class="product-card-part">
                                <p class="description font-light">
                                    <%= product.description %>
                                </p>
                            </div>

                            <div class="product-card-part">
                                <p class="price font-bold">$<%= Number.parseFloat(product.price).toFixed(2) %>
                                </p>
                                <% if (product.pay_by_installment) { %>
                                    <a class="info-button" title="Can be paid in installments"><svg
                                            xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                            stroke-width="1.5" stroke="currentColor" class="size-6">
                                            <path stroke-linecap="round" stroke-linejoin="round"
                                                d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                                        </svg></a>
                                    <% } else { %>
                                        <a class="info-button" title="Can not be paid in installments"><svg
                                                xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                                stroke-width="1.5" stroke="currentColor" class="size-6">
                                                <path stroke-linecap="round" stroke-linejoin="round"
                                                    d="m9.75 9.75 4.5 4.5m0-4.5-4.5 4.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                                            </svg></a>
                                        <% } %>
                            </div>

                            <div class="product-actions">
                                <form>
                                    <button class="edit-button not-alone-edit-button">
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                            stroke-width="1.5" stroke="currentColor" class="size-6">
                                            <path stroke-linecap="round" stroke-linejoin="round"
                                                d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
                                        </svg>
                                    </button>
                                </form>
                                
                                <form action="/api/store/product/delete/<%=product.id%>" method="post" class="delete-form">
                                    <button type="submit" class="not-alone-delete-button"
                                        onclick="return confirm('Are you sure you want to delete this product?')">
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                            stroke-width="1.5" stroke="currentColor" class="size-6">
                                            <path stroke-linecap="round" stroke-linejoin="round"
                                                d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                                        </svg>
                                    </button>
                                </form>
                            </div>

                        </div>
                        <% }); %>
                </div>
                <% } else { %>
                    <div id="emptyMessage">No products found.</div>
                    <% } %>
        </div>
    </main>

    <footer>
        <% const skip_val_back=Number(skip_val) - 2; const skip_val_next=Number(skip_val) + 2;%>
            <a href="/api/stores/product/limited/<%= skip_val_back %>/10/" class="page-switch-buttons back-button">
                <% if (skip_val_back>= 0) {%>
                    <button type="submit" class="back-button">Previous Page</button>
                    <% } else { %>
                        <button type="submit" class="back-button" disabled>Previous Page</button>
                        <% } %>
            </a>
            <a href="/api/stores/product/limited/<%= skip_val_next %>/10/" class="page-switch-buttons next-button">
                <% if (products_left <=0) {%>
                    <button type="submit" class="next-button" disabled>Next Page</button>
                    <% } else { %>
                        <button type="submit" class="next-button">Next Page</button>
                        <% } %>
            </a>
    </footer>

</body>

</html>