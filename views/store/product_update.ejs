<!--The following is loaded into overlay section from the product_add.html file when the store clicks on Add New-->
<div class="overlay-header">
    <button id="close-button" class="door-button">Close</button>
    <h3>Modify a Product</h3>
</div>

<form class="overlay-item-list">
    <div class="store-form-group">
        <label for="name">Product Name</label>
        <input type="text" id="name" name="name" value="<%= name %>" required>
    </div>

    <div class="store-form-group">
        <label for="description">Description</label>
        <textarea rows="4" id="description" name="description" required><%= description %></textarea>
    </div>

    <div class="store-form-group">
        <label for="price">Price</label>
        <input type="number" id="price" name="price" step="0.01" value=<%=price %> required>
    </div>

    <div class="store-form-group">
        <label for="pay_by_installment">
            Available for Installment Payment
            <input type="checkbox" id="installment" name="pay_by_installment" value="<%= installment %>" <% if
                (installment==1) {%>
            checked
            <%}%>
                >
        </label>
    </div>

    <button id="confirm-update-product-button">Apply</button>
</form>